<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
    android:background="?android:attr/windowBackground">

    <org.osmdroid.views.MapView
        android:id="@+id/mapview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="40dp"
        android:minHeight="40dp"
        android:minWidth="40dp"
        android:scaleType="fitXY"
        android:background="@drawable/current_location_icon"
        android:id="@+id/ic_center_map"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom = "10dp"
        android:layout_marginTop = "10dp"
        android:layout_marginStart = "10dp"
        android:cropToPadding="true" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="40dp"
        android:minHeight="40dp"
        android:minWidth="40dp"
        android:scaleType="fitXY"
        android:background="@drawable/settings_icon"
        android:id="@+id/settings_button"
        android:layout_below="@+id/ic_center_map"
        android:layout_marginBottom = "10dp"
        android:layout_marginTop = "10dp"
        android:layout_marginStart = "10dp"
        android:cropToPadding="true" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="40dp"
        android:minHeight="40dp"
        android:minWidth="40dp"
        android:scaleType="fitXY"
        android:background="@drawable/search_map_icon"
        android:id="@+id/search_button"
        android:layout_marginBottom = "10dp"
        android:layout_marginTop = "10dp"
        android:layout_marginStart = "10dp"
        android:layout_below="@+id/settings_button"
        android:cropToPadding="true"/>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="40dp"
        android:minHeight="40dp"
        android:minWidth="40dp"
        android:scaleType="fitXY"
        android:layout_below="@+id/search_button"
        android:id="@+id/favourites_button"
        android:layout_marginBottom = "10dp"
        android:layout_marginTop = "10dp"
        android:layout_marginStart = "10dp"
        android:background="@drawable/favourites_icon"
        android:cropToPadding="true" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="40dp"
        android:minHeight="40dp"
        android:minWidth="40dp"
        android:scaleType="fitXY"
        android:id="@+id/download_maps_button"
        android:layout_marginBottom = "10dp"
        android:layout_marginTop = "10dp"
        android:layout_marginStart = "10dp"
        android:layout_below="@+id/favourites_button"
        android:background="@drawable/download_map_icon"
        android:cropToPadding="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="Â© OpenStreetMap contributors"
        android:textSize="10dp"/>


</RelativeLayout>